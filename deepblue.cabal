name:                deepblue
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Simon Beaumont
maintainer:          datalligator@icloud.com
-- copyright:           
category:            Graphics
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

--
-- deepblue library under development
--
        
library
        exposed-modules:     Deepblue.Data.Geodetics
                           , Deepblue.Data.Geodetics.UTMZone
                           , Deepblue.Data.Geodetics.UTMGrid
                           , Deepblue.Data.Acceleration
                           , Deepblue.Data.Events
                           , Deepblue.Data.Marks
                           , Deepblue.Data.Time
                           , Deepblue.Data.Display
                           , Deepblue.Data.Options
                           , Deepblue.Graphics.Chart
                           , Deepblue.Graphics.Colors
                           , Deepblue.Graphics.Status
                           , Deepblue.Graphics.World
                           , Deepblue.Graphics.Interact
                           , Deepblue.Database.Monad
                           , Deepblue.Database.Schema
        other-modules:       
                           
        build-depends:       base
                           , geodetics
                           , dimensional
                           , time > 1.9
                           , text
                           , sort
                           , containers
                           , streamly
                           , sqlite-simple
                           , formatting
                           --, spatialite-simple
                           --, hnetcdf
                           --, random
                           , mtl
                           --, repa
                           --, vector
                           --, hmatrix
                           , gloss
                           , cmdargs
        hs-source-dirs:      src
        default-language:    Haskell2010
        ghc-options:         -O3 -Wall
        extra-libraries: sqlite3
        extra-lib-dirs: /usr/local/opt/sqlite3/lib /usr/local/lib
        
        
-- main plotter exe                     
                     
executable deepblue
  main-is:             Main.hs
  -- other-modules:    
  -- other-extensions:    
  build-depends:       base
                     , cmdargs
                     , gloss
                     , deepblue

  hs-source-dirs:      exe
  default-language:    Haskell2010
  ghc-options: -O3 -Wall -threaded
  extra-libraries: sqlite3
  extra-lib-dirs: /usr/local/opt/sqlite3/lib /usr/local/lib
  
executable loadgeo
  main-is:             Main.hs
  -- other-modules:    
  -- other-extensions:    
  build-depends:       base
                     , cmdargs
                     , deepblue

  hs-source-dirs:      utl
  default-language:    Haskell2010
  ghc-options: -O3 -Wall -threaded
  extra-libraries: sqlite3
  extra-lib-dirs: /usr/local/opt/sqlite3/lib /usr/local/lib

executable check
  main-is:             Main.hs
  -- other-modules:    
  -- other-extensions:    
  build-depends:       base
                     , cmdargs
                     , deepblue
                     , sqlite-simple
                     , text

  hs-source-dirs:      tst
  default-language:    Haskell2010
  ghc-options: -O3 -Wall -threaded
  extra-libraries: sqlite3
  extra-lib-dirs: /usr/local/opt/sqlite3/lib /usr/local/lib